<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Blog</title>
</head>
<body>
      <form action='/createBlog' method="POST" enctype="multipart/form-data">
        <input type="file" name="myImage" > 
        <input type="text" name="title" required placeholder="Title"><br>
        <textarea name="body" placeholder="Description" required></textarea><br>

     
        <input type="radio" name="active" value="true" checked>Active
        <input type="radio" name="active" value="false">InActive<br>

        <label for="category">Choose a Category:</label>

<select name="category" multiple required>
    <% categories.forEach(function(category){ %>
  <option value="<%= category._id%>"><%= category.name %></option>
 
  <%})%>
</select><br>
     
<input type="text" placeholder="Input tags with Space" name=tag>

<br>
<h1>Latitude : </h1><input type="text" name="latitude" value="<%= latitude%>" readonly><br>
<h1>Longitude :</h1><input type="text" name="longitude" value="<%= longitude%>" readonly><br>
        <button type="submit">SUBMIT</button><br><br><br>

    </form>
</body>
</html>